<%include ../partials/header %>

<div class="container">
    <div class="columns">
        <div class="column">
            <h1 class="title">Customers</h1>
        </div>
        <div class="column is-3">
            <div class="field is-grouped">
                <div class="control">
                    <button onclick="window.location.href= '/customer/customer-type'; "  class="button is-info is-rounded">Customer Types</button>
                </div>
                <div class="control">
                    <button class="button is-success is-rounded" onclick="window.location.href = '/customer/add'" id="add-customer">
                        <span class="icon">
                            <i class="fas fa-plus fa-xs"></i>
                        </span>
                        <span>
                            Add Customer
                        </span>
                    </button>
                </div>
            </div>
        </div>
    </div>
    <div class="columns">
        <div class="column">
            <table id="customer-table" class="table is-striped is-hoverable" style="width: 100%;">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Organization</th>
                        <th>Organization</th>
                        <th>Type</th>
                        <th>Added On</th>
                        <th>Address</th>
                        <th>City/Jilla</th>
                        <th>Anchal</th>
                    </tr>
                </thead>
                <tbody>
                    <% for(let i=0; i < customers.length; i++){ const customer = customers[i]; %>
                    <tr onclick="window.location.href = '/customer/<%=customer.id%>';">
                        <td class="customer-id"><%= customer.id %></td>
                        <td><%= customer.first_name+' '+customer.last_name %></td>
                        <td><%= customer.organization %></td>
                        <td><%= customer.vat_number %></td>
                        <td><%= customer.customer_type.name %></td>
                        <td><%= customer.nepali_date %></td>
                        <td><%= customer.address1 %></td>
                        <td><%= customer.post_office == null ? '' : customer.post_office.name;%><br><%= customer.district == null ? '': customer.district.value %></td>
                        <td><%= customer.zone == null ? '': customer.zone.value %></td>
                    </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</div>

<%include ../partials/footer %>