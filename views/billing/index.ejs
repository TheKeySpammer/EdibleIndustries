<%include ../partials/header %>

<div class="container">
    <div class="columns">
        <div class="column">
            <h1 class="title">Bills</h1>
        </div>
        <div class="column is-3">
            <div class="field is-grouped is-grouped-right">
                <div class="control">
                    <button class="button is-success is-rounded" onclick="window.location.href = '/billing/add'"
                        id="add-customer">
                        <span class="icon">
                            <i class="fas fa-plus fa-xs"></i>
                        </span>
                        <span>
                            New Bill
                        </span>
                    </button>
                </div>
            </div>
        </div>
    </div>
    <div class="columns">
        <div class="column is-2">
            <label for="from" class="label">From</label>
            <input type="text" class="input date-picker" id="from_date"><button class="button is-success clear-button"><i class="fas fa-times"></i></button>
        </div>
        <div class="column is-2">
            <label for="to" class="label">To</label>
            <input type="text" class="input date-picker" id="to_date"><button class="button is-success clear-button"><i class="fas fa-times"></i></button>
        </div>

    </div>
    <div class="columns">
        <div class="column">
            <table id="billing-table" class="table is-striped is-hoverable" style="width: 100%;">
                <thead>
                    <tr>
                        <th>Bill No</th>
                        <th>Date</th>
                        <th>Customer</th>
                        <th>Customer Type</th>
                        <th>Billed By</th>
                        <th>Amount</th>
                        <th>Total Sold</th>
                        <th>Payment</th>
                        <th>Rented</th>
                    </tr>
                </thead>
                <tbody>
                    
                </tbody>
                <tfoot>
                    <tr>
                        <th></th>
                        <th></th>
                        <th></th>
                        <th></th>
                        <th></th>
                        <th></th>
                        <th></th>
                        <th></th>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>
</div>

<%include ../partials/footer %>