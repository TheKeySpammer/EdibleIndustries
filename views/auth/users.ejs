<%include ../partials/header %>


<div class="container">
    <div class="columns">
        <div class="column">
            <h1 class="title">Users</h1>
        </div>
        <div class="column is-3">
            <div class="field is-grouped is-grouped-right">
                <div class="control">
                    <button class="button is-success is-rounded" onclick="window.location.href = '/auth/signup'"
                        id="add-customer">
                        <span class="icon">
                            <i class="fas fa-plus fa-xs"></i>
                        </span>
                        <span>
                            New User
                        </span>
                    </button>
                </div>
            </div>
        </div>
    </div>
    <div id="users-panel" class="columns is-multiline">
        <% for(let i = 0; i < users.length; i++){ var user = users[i]; %>
        <div class="column is-4">
            <div class="card custom-card" onclick="window.location.href = '/auth/users/edit/<%= user.id %>'">
                <div class="card-content">
                    <div class="content">
                        <h1 class="title is-4"><%= user.first_name+' '+user.last_name %></h1>
                        <p class="subtitle is-6"><%= user.email %></p>
                        <p><%= user.user_type %></p>
                    </div>
                </div>
            </div>
        </div>
        <% } %>
    </div>
</div>


<%include ../partials/footer %>